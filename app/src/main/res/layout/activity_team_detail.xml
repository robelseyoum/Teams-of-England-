<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.teamview.TeamDetailActivity">

    <ImageView
            android:id="@+id/tv_image_detail"
            android:layout_width="279dp"
            android:layout_height="188dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.872"
            app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
            android:id="@+id/tv_title_detail"
            android:layout_width="276dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.512"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_image_detail"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tv_description_detail"
            app:layout_constraintVertical_bias="0.396"/>

    <TextView
            android:id="@+id/tv_description_detail"
            android:layout_width="290dp"
            android:layout_height="287dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="68dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.552"/>


</androidx.constraintlayout.widget.ConstraintLayout>